<!-- TODO: this has lots of things that should be generated by the build system -->
<installer-gui-script minSpecVersion="1">
    <title>Floe Installer</title>
    <welcome file="welcome.txt" mime-type="text/plain"/>
    <options customize="always" require-scripts="false"/>
    <os-version min="11" /> 
    <line choice="com.Floe.AU" />
    <line choice="com.Floe.VST3" />
    <line choice="com.Floe.CLAP" />
    <choices-outline>
        <choice id="com.Floe.AU" title="Floe AudioUnit (AUv2)" description="Audio Unit">
            <pkg-ref id="com.Floe.AU" onConclusion="none" version="1.0.0">installer_package_au.pkg</pkg-ref>
        </choice>
        <choice id="com.Floe.VST3" title="Floe VST3" description="VST3">
            <pkg-ref id="com.Floe.VST3" onConclusion="none" version="1.0.0">installer_package_vst3.pkg</pkg-ref>
        </choice>
        <choice id="com.Floe.CLAP" title="Floe CLAP" description="CLAP">
            <pkg-ref id="com.Floe.Clap" onConclusion="none" version="1.0.0">installer_package_clap.pkg</pkg-ref>
        </choice>
    </choices-outline>
</installer-gui-script>
