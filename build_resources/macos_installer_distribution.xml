<!-- TODO: this has lots of things that should be generated by the build system/installer script -->
<installer-gui-script minSpecVersion="1">
    <title>Floe</title>
    <welcome file="welcome.txt" mime-type="text/plain"/>
    <options customize="always" require-scripts="false"/>
    <os-version min="11" /> 
    <choice id="com.Floe.component" title="Floe AudioUnit (AUv2)" description="AudioUnit (version 2) format of the Floe plugin">
        <pkg-ref id="com.Floe.component">package_component.pkg</pkg-ref>
    </choice>
    <choice id="com.Floe.vst3" title="Floe VST3" description="VST3 format of the Floe plugin">
        <pkg-ref id="com.Floe.vst3">package_vst3.pkg</pkg-ref>
    </choice>
    <choice id="com.Floe.clap" title="Floe CLAP" description="CLAP format of the Floe plugin">
        <pkg-ref id="com.Floe.clap">package_clap.pkg</pkg-ref>
    </choice>
    <choice id="com.Floe.dirs" title="Floe Folders" description="Create empty folders ready for Floe to use to look for libraries and presets" enabled="false">
        <pkg-ref id="com.Floe.dirs">floe_dirs.pkg</pkg-ref>
    </choice>
    <choices-outline>
        <line choice="com.Floe.dirs" />
        <line choice="com.Floe.component" />
        <line choice="com.Floe.vst3" />
        <line choice="com.Floe.clap" />
    </choices-outline>
</installer-gui-script>
